{
  "name": "@fwo/server",
  "version": "0.4.0",
  "description": "FightWorld Telegram",
  "main": "index.js",
  "type": "module",
  "workspaces": [
    "src",
    "app",
    "schemas"
  ],
  "scripts": {
    "start": "NODE_ENV=production bun src/fwo.ts",
    "dev": "bun run --filter '@fwo/*' dev",
    "test": "bun src/cli/test.ts -i",
    "generate:items": "bun src/cli/generateItems.ts",
    "reset-harks": "bun src/cli/resetHarks.ts",
    "lint": "bun run --filter '@fwo/*' lint",
    "format": "bun run --filter '@fwo/*' format",
    "types": "bun run --filter '@fwo/*' types",
    "build": "bun run --filter '@fwo/app' build"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/catHD/fwo-tg.git"
  },
  "keywords": [
    "fwo",
    "game",
    "nodejs",
    "mmorpg"
  ],
  "author": "FWO Team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/catHD/fwo-tg/issues"
  },
  "homepage": "https://github.com/catHD/fwo-tg#readme",
  "dependencies": {
    "valibot": "^1.0.0-rc.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.8.2"
  }
}
